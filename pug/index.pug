- var pageTitle = 'Github 專案頁面模版'
- var description = 'Github 專案頁面模版'
- var fburl = 'https://auguston.github.io/0-sample-github/'
- var fbImg = ''
- var keywords = ''

doctype

html
  head
    title=pageTitle

    //- description 用 block prepend meta-tags
    meta(name="description", content=description)
    link(rel="canonical", href=fburl)
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
    meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0, minimal-ui")

    //- favicon
    link(rel="shortcut icon", href="contents/img/favicon.ico")

    //- chrome網址列顏色
    meta(name="theme-color", content="#2a5298")

    //- safari網址列顏色
    meta(name="apple-mobile-web-app-status-bar-style", content="#2a5298")

    //- 要額外引用的css，用block prepend 或 append link引用
    block link-tags
      link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css")
      link(rel="stylesheet", href="contents/vendor/waves.min.css")
      link(rel="stylesheet", href="contents/css/main.css")
    
    script(defer, src="https://use.fontawesome.com/releases/v5.0.2/js/all.js")

    = "\n"
    = "\n"
    = "\n"

    //- fb
    meta(property="fb:app_id", content="484081328635964")
    meta(property="og:url", content=fburl)
    meta(property="og:type", content="website")
    meta(property="og:site_name", content=pageTitle)
    meta(property="og:title", content=pageTitle)
    meta(property="og:description", content=description)
    meta(property="og:image", content=fbImg)
    meta(property="og:image:width", content="1200")
    meta(property="og:image:height", content="630")

    meta(name="keywords", content=keywords)

    = "\n"
    = "\n"
    = "\n"

